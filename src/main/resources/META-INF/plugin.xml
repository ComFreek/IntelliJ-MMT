<idea-plugin>
    <id>info.kwarc.mmt.intellij.MMTPlugin</id>
    <name>MMT Plugin</name>
    <vendor email="d.mueller@kwarc.info" url="http://uniformal.github.io">UniFormal</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- <sdkType implementation="info.kwarc.mmt.intellij.MMTSDK"/>
        <moduleBuilder builderClass="info.kwarc.mmt.intellij.ArchiveModuleBuilder"/>
        <projectStructureDetector implementation="info.kwarc.mmt.intellij.ArchiveModuleStructureDetector"/>
        <fileTypeFactory implementation="info.kwarc.mmt.intellij.Language.MMTXFileFactory"/>
        <psi.referenceContributor implementation="info.kwarc.mmt.intellij.Language.URIReferenceContributor"/>
        -->
        <annotator language="MMT" implementationClass="info.kwarc.mmt.intellij.Language.MMTAnnotator"/>
        <externalAnnotator language="MMT" implementationClass="info.kwarc.mmt.intellij.Language.ExtAnnotator"/>
        <toolWindow id="MMT Shell" icon="/img/icon.png" anchor="bottom" factoryClass="info.kwarc.mmt.intellij.ui.ShellFactory"/>
        <lang.parserDefinition language="MMT" implementationClass="info.kwarc.mmt.intellij.Language.MMTParserDefinition"/>
        <lang.syntaxHighlighterFactory language="MMT" implementationClass="info.kwarc.mmt.intellij.Language.Factory"/>
        <colorSettingsPage implementation="info.kwarc.mmt.intellij.Language.ColorSettings"/>
        <fileTypeFactory implementation="info.kwarc.mmt.intellij.Language.MMTFileFactory"/>
        <moduleType id="mmt-mh" implementationClass="info.kwarc.mmt.intellij.MathHubModuleType"/>
        <completion.contributor language="MMT" implementationClass="info.kwarc.mmt.intellij.Language.Completion"/>
        <!-- <moduleType id="mmt-archgr" implementationClass="info.kwarc.mmt.intellij.ArchiveGroupLocalModuleType"/>
            <moduleType id="mmt-arch-local" implementationClass="info.kwarc.mmt.intellij.LocalArchiveModuleType"/>
            <projectTemplatesFactory implementation="info.kwarc.mmt.intellij.MMTProjectTemplatesFactory"/>
            <treeStructureProvider implementation="info.kwarc.mmt.intellij.ui.ProjectView"/>
        -->
    </extensions>

    <project-components>
        <component>
            <implementation-class>info.kwarc.mmt.intellij.MMTPlugin</implementation-class>
        </component>
    </project-components>

    <actions>
        <!--
        <group id="MMT.MainMenu" text="MMT" description="MMT Menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="MMTPlugin.Test" class="info.kwarc.mmt.intellij.actions.MMTTest" text="MMT Info"
                    description="Basic information on running MMT instance"/>

        </group>
        -->
    </actions>
    <depends>org.intellij.scala</depends>
</idea-plugin>